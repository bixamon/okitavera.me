{% for tweets in twitter | head(3) %}
  <div class="row row--immutable padding--y-1">
    <div class="col--fit">
      <div class="post__icon" style="background-color: #38A1F3">
        <a href="https://twitter.com/{{ tweets.username }}/status/{{ tweets.id }}">
          <img src="/assets/img/twitter.svg" alt="article icon" width="32" height="32">
        </a>
      </div>
    </div>
    <div class="col">
      <a href="https://twitter.com/{{ tweets.username }}">
        <b>{{ tweets.name }}</b>
        <span class="txt--dark-fade">@{{ tweets.username }}</span>
         Â· <span class="txt--dark-fade twitter-date" data-date="{{ tweets.date }}">{{ tweets.date }}</span>
      </a>
      <p class="margin--y-0">
        {{ tweets.text | nl2br | urlize | safe }}
      </p>
    </div>
  </div>
{% endfor %}
