.center
  text-align center

.left
  text-align left

.right
  text-align right

*.txt
  &--upper
    text-transform uppercase
  &--small
    font-size 90%
  &--big
    font-size 120%
  &--accent
    color var(--color-accent)
  &--light
    color var(--color-light)
  &--light-fade
    color var(--color-light-fade)
  &--dark
    color var(--color-dark)
  &--dark-fade
    color var(--color-dark-fade)
  &--300
    font-weight weight
  &--400
    font-weight weight
  &--700
    font-weight weight
  &--900
    font-weight weight

.circle
  border-radius 50%

.padding
  &--y-1
    padding-top 0
    padding-bottom 0
  &--x-1
    padding-right 0
    padding-left 0
  &--y-1
    padding-top 1rem
    padding-bottom 1rem
  &--x-1
    padding-right 1rem
    padding-left 1rem
  &--y-2
    padding-top 2rem
    padding-bottom 2rem
  &--x-2
    padding-right 2rem
    padding-left 2rem

.margin
  &--y-0
    margin-top 0
    margin-bottom 0
  &--x-0
    margin-right 0
    margin-left 0
  &--y-1
    margin-top 1rem
    margin-bottom 1rem
  &--x-1
    margin-right 1rem
    margin-left 1rem
  &--y-2
    margin-top 2rem
    margin-bottom 2rem
  &--x-2
    margin-right 2rem
    margin-left 2rem

@media screen and (max-width: --flexbox-breakpoint)
  .padding
    &--y-1
      padding-top 1rem
      padding-bottom 1rem
    &--x-1
      padding-right 1rem
      padding-left 1rem
    &--y-2
      padding-top 2rem
      padding-bottom 2rem
    &--x-2
      padding-right 2rem
      padding-left 2rem
  .margin
    &--y-1
      margin-top 1rem
      margin-bottom 1rem
    &--x-1
      margin-right 1rem
      margin-left 1rem
    &--y-2
      margin-top 2rem
      margin-bottom 2rem
    &--x-2
      margin-right 2rem
      margin-left 2rem

[class^='spacer--']
  display block
  margin 0
  padding 0
  border none

.spacer--1
  height 1rem

.spacer--2
  height 2rem

.spacer--3
  height 3rem

.hline
  left 0
  margin -1px auto 0
  width 100%
  height 1px
  background-color var(--color-light-fade)

.bg
  &--accent
    background-color var(--color-accent)
  &--transparent
    background-color transparent
  &--light
    background-color var(--color-light)
  &--dark
    background-color var(--color-dark)

.bg-half
  &--light
    background linear-gradient(to top, var(--color-light-fade) 15%, var(--color-light-fade) 40%, transparent 40.1%, transparent 100%)
  &--dark
    background linear-gradient(to top, var(--color-dark-fade) 15%, var(--color-dark-fade) 40%, transparent 40.1%, transparent 100%)
  &--accent
    background linear-gradient(to top, var(--color-accent) 15%, var(--color-accent) 40%, transparent 40.1%, transparent 100%)
