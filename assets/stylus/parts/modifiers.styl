.center
  text-align center

.left
  text-align left

.right
  text-align right

*.txt
  &--upper
    text-transform uppercase
  &--small
    font-size 90%
  &--big
    font-size 120%
  &--accent
    color var(--color-accent)
  &--light
    color var(--color-light)
  &--light-fade
    color var(--color-light-fade)
  &--dark
    color var(--color-dark)
  &--dark-fade
    color var(--color-dark-fade)

for weight in 300 400 700 900
  &--{weight}
    font-weight weight

.circle
  border-radius 50%

for i in (0 .. 4)
  .padding
    &--y-{i}
      padding-top i rem
      padding-bottom i rem
    &--x-{i}
      padding-right i rem
      padding-left i rem
  .margin
    &--y-{i}
      margin-top i rem
      margin-bottom i rem
    &--x-{i}
      margin-right i rem
      margin-left i rem

@media screen and (max-width: --flexbox-breakpoint)
  for i in (1 .. 4)
    m = (i - .5)
    .padding
      &--y-{i}
        padding-top m rem
        padding-bottom m rem
      &--x-{i}
        padding-right m rem
        padding-left m rem
    .margin
      &--y-{i}
        margin-top m rem
        margin-bottom m rem
      &--x-{i}
        margin-right m rem
        margin-left m rem

for i in (1 .. 4)
  .spacer--{i}
    display block
    margin 0
    padding 0
    height i rem
    border none

.hline
  left 0
  margin -1px auto 0
  width 100%
  height 1px
  background-color var(--color-light-fade)

.bg
  &--accent
    background-color var(--color-accent)
  &--transparent
    background-color transparent

.bg-half
  &--accent
    background linear-gradient(to top, var(--color-accent) 15%, var(--color-accent) 40%, transparent 40.1%, transparent 100%)

for i in (0 .. 4)
  .bg
    &--light
      background-color var(--color-light)
    &--dark
      background-color var(--color-dark)
  .bg-half
    &--light
      background linear-gradient(to top, var(--color-light-fade) 15%, var(--color-light-fade) 40%, transparent 40.1%, transparent 100%)
    &--dark
      background linear-gradient(to top, var(--color-dark-fade) 15%, var(--color-dark-fade) 40%, transparent 40.1%, transparent 100%)
